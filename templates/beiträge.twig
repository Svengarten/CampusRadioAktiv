<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beiträge - Campus Radio Aktiv</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <header>
        <div class="logo"><img src="assets/img/Logo.png" alt="Campus Radio Aktiv Logo"></div>
        <nav id="main-nav">
            <ul>
                <li><a href="social.php">Startseite</a></li>
                <li><a href="sendungen.php">Sendungen</a></li>
                <li><a href="beitraege.php" class="active">Beiträge</a></li>
                <li><a href="#">Über uns</a></li>
                <li><a href="#">Kontakt</a></li>
            </ul>
        </nav>
        <div class="burger-menu" id="burger-menu">
            <i class="fas fa-bars"></i> <!-- Burger Icon -->
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Suche...">
        </div>
    </header>

    <main>
        <div class="beitraege">
            {% for beitrag in beitraege %}
            <div class="beitrag">
                <div class="beitrag-bild">
                    <img src="{{ beitrag.bild }}" alt="{{ beitrag.titel }}">
                </div>
                <div class="beitrag-info">
                    <h2>{{ beitrag.titel }}</h2>
                    <p><strong>Autor:</strong> {{ beitrag.autor }}</p>
                    <p><strong>Datum:</strong> {{ beitrag.datum }}</p>
                    <p>{{ beitrag.inhalt }}</p>
                </div>
            </div>
            <hr> <!-- Trenner zwischen Beiträgen -->
            {% endfor %}
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Campus Radio Aktiv. Alle Rechte vorbehalten. | <a href="#">Datenschutz</a> | <a href="#">Impressum</a></p>
    </footer>

    <script>
        // Hole das Burger-Symbol und das Nav-Element
        const burgerMenu = document.getElementById('burger-menu');
        const nav = document.getElementById('main-nav');

        // Toggle-Klasse für das Nav-Element
        burgerMenu.addEventListener('click', () => {
            nav.classList.toggle('active');
        });
    </script>
</body>
</html>
